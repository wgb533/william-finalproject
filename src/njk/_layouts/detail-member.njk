{% extends '_layouts/base.njk' %}

{% block page_title %}{{member.name}}{% endblock %}

{% block member_description %} {{member.title}} by {{member.name}}{% endblock %}

{% block content %}
<article class="container">
<div class="row">
<div class="col-sm-4">
{% block info %}
    <img src="img/members/{{member.image}}" alt="" class="img-fluid">
        <p>{{member.name}}</p>
        {% endblock %}
    </div>
    <div class="col-sm-8">
    {% block blurb %}
    <h1>{{members.names}}</h1>
    <p>{{members.text|safe}}</p>
    {% endblock %}

    </div>
    </div>
    </article>

    {% endblock %}